
@model CrudOpreation.Models.RegisterTblDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormAdd</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form method="post" asp-action="FormAdd" asp-controller="RegisterTbl">
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3>Registration</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" name="btn1" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
        @if (ViewBag.Msg != null)
        {
            <div>
                <script>
                    alert("@ViewBag.Msg")
                </script>
            </div>
        }
        @ViewBag.Msg
     
    </form>
</body>
</html>
